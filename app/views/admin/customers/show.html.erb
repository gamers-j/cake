<div class='container'>
  <div class='row py-5'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3 style="background-color: #C0C0C0;"><%= @customer.full_name %>さんの会員詳細</h3>
    <table class='table'>
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.full_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_namber %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @customer.is_deleted == true %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-secondary">退会</span>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>
            <%= link_to "編集する",edit_admin_customer_path(@customer),class: 'btn btn-outline-success btn-lg' %>
          </th>
          <th>
            <%= link_to "注文履歴一覧を見る",admin_order_path(@customer),class: 'btn btn-outline-success btn-lg' %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>