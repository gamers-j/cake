<div class='container'>
  <div class='row pt-5'>
    <div class="col-lg-4">
      <h5 class="bg-dark text-light text-center"><%= @customer.full_name %>さんの会員情報編集</h5>
    </div>
  </div>
  <div class='row mt-5'>
    <%= form_with model:[:admin,@customer], local:true do |f| %>
    <table>
      <tr>
        <th>
          <%= f.label :id, "会員ID" %>
        </th>
        <td>
          <%= @customer.id %>
        </td>
      </tr>
      <tr>
        <th>
          <%= f.label "氏名" %>
        </th>
        <td>
          <%= f.text_field :first_name, autocomplete: "first_name" %>
          <%= f.text_field :last_name, autocomplete: "last_name" %>
        </td>
      </tr>
      <tr>
        <th>
          <%= f.label "フリガナ" %>
        </th>
        <td>
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
          <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
        </td>
      </tr>
      <tr>
        <th>
          <%= f.label "郵便番号(ハイフンなし)" %>
        </th>
        <td>
          <%= f.text_field :postal_code,  autocomplete: "postal_code" %>
        </td>
      </tr>
      <tr>
        <th>
          <%= f.label "住所" %>
        </th>
        <td>
          <%= f.text_field :address, autocomplete: "adderss",:size=>"50" %>
        </td>
      </tr>
      <tr>
        <th>
          <%= f.label "電話番号(ハイフンなし)" %>
        </th>
        <td>
          <%= f.text_field :telephone_namber, autocomplete: "telephone_namber" %>
       </td>
      </tr>
      <tr>
        <th>
          <%= f.label "メールアドレス" %>
        </th>
        <td>
          <%= f.email_field :email, saautofocus: true, autocomplete: "email" %>
        <td>
      </tr>
      <tr>
        <th>
          <%= f.label "会員ステータス" %>
        </th>
        <td>
          <%= f.radio_button :is_deleted, 'false' %>
          <%= f.label :is_deleted, "有効", {value: 'false', style: "display: inline-block;"} %>
          <%= f.radio_button :is_deleted, 'true' %>
          <%= f.label :is_deleted, "退会", {value: 'true', style: "display: inline-block;"} %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.submit "変更を保存",class: 'btn btn-outline-success btn-lg' %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
  </div>
</div>