<div class='container'>
  <div class='row pt-5'>
    <h4 style="background-color: #C0C0C0;"><%= @customer.full_name %>さんの会員情報編集</h4>
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
        </div>
    <%= form_with model:[:admin,@customer], local:true do |f| %>

    <table class='table'>
      <tr>
        <td>
          <%= f.label :id, "会員ID" %>
          <%= @customer.id %>
        </td>
      </tr>
      <tr>
        <td>
        <%= f.label "氏名" %>
        <%= f.text_field :first_name, autocomplete: "first_name" %>
        <%= f.text_field :last_name, autocomplete: "last_name" %>
      </tr>
      <tr>
        <td>
        <%= f.label "フリガナ" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
        </td>
      </tr>
      <tr>
        <td>
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :introduction, class: "form-control introduction" %>
        </td>
      </tr>
      <tr>
        <td>
        <%= f.label "住所" %>
        <%= f.text_field :address, autocomplete: "adderss" %>
        </td>
      </tr>
     <tr>
       <td>
        <%= f.label "電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_namber, autocomplete: "telephone_namber" %>
       </td>
    </tr>
      <tr>
        <td>
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, saautofocus: true, autocomplete: "email" %>
        <td>
      </tr>
       <tr>
         <td>
        <%= f.label "会員ステータス" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "有効", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "退会", {value: :false, style: "display: inline-block;"} %>
        </td>
      </tr>
      <tr>
        <td>
        <%= f.submit "変更を保存",class: 'btn btn-outline-success btn-lg' %>
       </td>
      </tr>
      </table>
    <% end %>
  </div>
</div>