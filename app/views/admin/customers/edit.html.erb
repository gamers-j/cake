<div class='container'>
  <div class='row pt-5'>
    <h3 style="background-color: #C0C0C0;">さんの会員情報編集</h3>
    </div>
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
    <%= form_with model:@customers, local:true do |f| %>
      <div class="form-group">
        <%= f.label "会員ID" %>
      </div>
      <div class="form-group">
        <%= f.label "氏名" %>
        <%= f.text_field :first_name, placeholder: "令和", autocomplete: "first_name" %>
        <%= f.text_field :last_name, placeholder: "道子", autocomplete: "last_name" %>
      </div>
      <div class="form-group">
        <%= f.label "フリガナ" %>
        <%= f.text_field :first_name_kana, placeholder: "レイワ", autocomplete: "first_name_kana" %>
        <%= f.text_field :last_name_kana, placeholder: "ミチコ", autocomplete: "last_name_kana" %>
      </div>
      <div class="form-group">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label "住所" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "adderss" %>
        </div>

      <div class="form-group">
        <%= f.label "電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_namber, placeholder: "00000000000", autocomplete: "telephone_namber" %>
        </div>

        <div class="form-group">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, placeholder: "sample@example.com", saautofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
        <%= f.label "会員ステータス" %>
        <%= f.radio_button :gender, :male %>
        <%= f.label :gender, "有効", {value: :male, style: "display: inline-block;"} %>
        <%= f.radio_button :gender, :female %>
        <%= f.label :gender, "退会", {value: :female, style: "display: inline-block;"} %>
        </div>

      <div class="form-group">
        <%= f.submit "変更を保存",class: 'btn btn-outline-success btn-lg' %>
      </div>
    <% end %>
  </div>
</div>