<div class='container'>
  <div class='row pt-5'>
    <h3 style="background-color: #C0C0C0;">会員一覧</h3>
    </div>
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
<table width="800">
  <thead>
    <tr>
      <th>会員ID</th>
      <th colspan="5">氏名</th>
      <th>メールアドレス</th>
      <th align="center">ステータス</th>
    </tr>
　</thead>
　<tbody>
　  <% @customers.each do |customer| %>
　  <tr>
　    <td><%= customer.id %></td>
　    <td><%= link_to customer.name %></td>
　    <td><%= customer.introduction %></td>
　    <td><%= customer.nontaxed_price %></td>
　    <td><%= customer.is_active %></td>
　  </tr>
　  <% end %>
　</tbody>
</table>
</div>
</div>
</div>
</div>