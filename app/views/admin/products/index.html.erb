<div class='container'>
  <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<table>
  <h2>商品一覧</h2>
  <thead>
    <tr>
      <th colspan="3">商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th align="center">ステータス</th>
    </tr>
　</thead>
　<tbody>
　  <% @products.each do |product| %>
　  <tr>
　    <td><%= product.id %></td>
　    <td><%= link_to product.name %></td>
　    <td><%= product.introduction %></td>
　    <td><%= product.nontaxed_price %></td>
　    <td><%= product.is_active %></td>
　  </tr>
　  <% end %>
　</tbody>
</table>
</div>
</div>
</div>