<div class='container'>
  <div class="row pt-5">
    <div class="col-lg-3">
      <h5 class="bg-dark text-light text-center">商品新規登録</h5>
    </div>
  </div>
  <%= form_with model:[:admin,@product], local:true do |f| %>
  <table class='table'>
    <tr>
      <th>
        <%= f.label "商品画像" %>
      </th>
      <td>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label "商品名" %>
      </th>
      <td>
        <%= f.text_field :name, class: "form-control name" %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label "商品説明" %>
      </th>
      <td>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label "ジャンル" %>
      </th>
      <td>
        <%= f.select :type_id, options_from_collection_for_select(Type.all, :id, :name),include_blank: "--選択して下さい--" %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label "税抜価格" %>
      </th>
      <td>
        <%= f.text_field :nontaxed_price, class: "form-control name" %>円
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label "販売ステータス" %>
      </th>
      <td>
        <%= f.radio_button :is_active, 'false' %>
        <%= f.label :is_active, "販売中", {value: 'false', style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, 'true' %>
        <%= f.label :is_active, "販売停止中", {value: 'true', style: "display: inline-block;"} %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= f.submit "新規登録",class: 'btn btn-outline-success btn-lg' %>
      </td>
    </tr>
  </table>
  <% end %>
</div>