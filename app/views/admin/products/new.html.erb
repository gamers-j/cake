<div class='container'>
  <div class="row pt-5">
    <h3 style="background-color: #C0C0C0;">商品新規登録</h3>
    </div>
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
    <%= form_with model:[:admin,@product], local:true do |f| %>

     <div class="form-group">
        <%= f.label "商品画像" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
       <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_field :name, class: "form-control name" %>
        </div>
      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.select :type_id, options_from_collection_for_select(Type.all, :id, :name),include_blank: "--選択して下さい--" %>
      </div>

      <div class="form-group">
        <%= f.label "税抜価格" %>
        <p><%= f.text_field :nontaxed_price, class: "form-control name" %>円</p>
      </div>

        <div class="form-group">
        <%= f.label "販売ステータス" %>
        <%= f.radio_button :is_active, 'true' %>
        <%= f.label :is_active, "販売中", {value: 'true', style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, 'false' %>
        <%= f.label :is_active, "販売停止中", {value: 'false', style: "display: inline-block;"} %>
        </div>

      <div class="form-group">
        <%= f.submit "新規登録",class: 'btn btn-outline-success btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
</div>