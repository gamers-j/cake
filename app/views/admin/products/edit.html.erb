<div class='container'>
  <div class='row　'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>商品編集</h2>
    <%= form_with model:[:admin,@product], local:true do |f| %>
     <div class="form-group">
        <%= f.label "商品画像" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
       <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_field :name, class: "form-control name" %>
        </div>
      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.select :faculty, [["ケーキ", "ケーキ"], ["焼き菓子", "焼き菓子"], ["プリン", "プリン"], ["キャンディ", "キャンディ"]], include_blank: "--選択して下さい--" %>
        </div>

      <div class="form-group">
        <%= f.label "税抜価格" %>
        <%= f.text_field :nontaxed_price, class: "form-control name" %>円
        </div>

        <div class="form-group">
        <%= f.label "販売ステータス" %>
        <%= f.radio_button :gender, :male %>
        <%= f.label :gender, "販売中", {value: :male, style: "display: inline-block;"} %>
        <%= f.radio_button :gender, :female %>
        <%= f.label :gender, "販売停止中", {value: :female, style: "display: inline-block;"} %>
        </div>

      <div class="form-group">
        <%= f.submit "変更を保存",class: 'btn btn-outline-success btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
