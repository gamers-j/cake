<div class='container'>
  <div class="row pt-5">
    <h3 style="background-color: #C0C0C0;">商品詳細</h3>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <table class='table'>
        <tr>
          <th>商品名</th>
          <th><%= @product.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @product.introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= @product.type.name %></th>
        </tr>
        <tr>
          <th>税抜価格</th>
          <th><%= @product.nontaxed_price %>円</th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th><%= @product.is_active %></th>
        </tr>
        <tr>
          <th>
            <%= link_to "編集する",class: 'btn btn-outline-success btn-lg' %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>