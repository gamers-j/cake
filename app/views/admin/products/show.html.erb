<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>商品詳細</h2>
    <table class='table'>
      <%= form_with model: @products, local:true do |f| %>
      <tr>
        <td>
          <%= f.label "商品名" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "商品説明" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "ジャンル" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "税抜価格" %>
          円
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "販売ステータス" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.submit "編集する",class: 'btn btn-outline-success btn-lg' %>
        </td>
      </tr>
    </table>
     <% end %>
    </div>
  </div>
</div>

