<div class="container py-5">
 <h4>
   <span class="bg-dark text-light">会員情報編集</span>
 </h4>
 <div class="row">
 <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
   <table class="table">
    <tr>
     <td>氏名</td>
     <td>
      <%= f.label :name, "(姓)" %><%= f.text_field :first_name, autocomplete: "first_name" %>
      <%= f.label :name, "(名)" %><%= f.text_field :last_name, autocomplete: "last_name" %>
     </td>
    </tr>
    <tr>
     <td>フリガナ</td>
     <td>
      <%= f.label :name, "(セイ)" %><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
      <%= f.label :name, "メイ" %><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
     </td>
    </tr>
    <tr>
     <td>郵便番号</td>
     <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td><%= f.text_field :address, autocomplete: "adderss" %></td>
    </tr>
    <tr>
     <td>電話番号</td>
     <td><%= f.text_field :telephone_namber, autocomplete: "telephone_namber" %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
   </table>
   <table>
     <tr>
       <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
       <td></td>
       <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></td>
     </tr>
   </table>
 <% end %>
 </div>
</div>
