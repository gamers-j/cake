<div class="container py-5">
 <h4>
   <span class="bg-dark text-light">マイページ</span>
 </h4>
 <p></p><br>
 <p></p>
 <div class="row">
   <h3 class="col-2">登録情報</h3>
   <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success" %>
 </div>
 <p></p>
 <table class="table table-hover">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_namber %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
 </table>
 <div class="row">
   <h3 class="col-2">配送先</h3>
   <%= link_to "一覧を見る", delivery_addresses_path, class: "btn btn-primary" %>
 </div>
 <p></p>
 <div class="row">
   <h3 class="col-2">注文履歴</h3>
   <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
 </div>
</div>