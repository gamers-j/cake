<h4>注文情報確認</h4>
<table class="table">
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% @cart_products.each do |product| %>
    <tr>
      <td><%= image_tag product.product.get_profile_image(50,50) %><%= product.product.name %></td>
      <td>¥<%= product.add_tax_taxed_price.to_s(:delimited) %></td>
      <td><%= product.quantity %></td>
      <td>¥<%= product.subtotal %></td>
      <% @total += product.subtotal %>
    <% end %>
    </tr>
  </tbody>
</table>
<table class="table">
  <tr>
    <td>送料</td>
    <td>¥800</td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td>¥<%= @total.to_s(:delimited) %></td>
  </tr>
  <tr>
    <td>請求金額</td>
    <td>¥<%= (@total + 800).to_s(:delimited) %></td>
  </tr>
</table>

<h4>支払い方法</h4>
<%= @order.payment_method_i18n %>

<h4>お届け先</h4>
<%= @order.address %>

<%= render "hidden_field", order: @order, total: @total %>
