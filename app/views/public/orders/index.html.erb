<h1>注文履歴一覧</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  <tbody>
    <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
      <td><%= order.address %></td>
          <% @product.each do |product| %>
          <% if product.order_id == order_id %>
      <td><%= product.name %></td>
          <% end %>
          <% end %>
      <td>¥<%= order.total_amount.to_s(:delimited) %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
    </tr>
  </tbody>
</table>