<div class = "container py-5 ">
  <div class = "row">
    <div class = "col-lg-3">
      <h5 class = "bg-dark text-light text-center">配送先登録/一覧</h5>
    </div>
  </div>
<div class = "row">
  <%= form_with model: @address, url: delivery_addresses_path, method: :post do |f| %>
<h4>
  <table>
    <tr>
      <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
      <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", :size=>"60" %></td>
    </tr>
    <tr>
      <td><%= f.label :name, "宛名" %></td>
      <td><%= f.text_field :name, placeholder: "令和道子" %></td>
      <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
    </tr>
  </table>
</h4>
</div>
  <% end %>
<div class = "row">
  <div class = "col-8">
    <table class = "table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
        <% @addresses.each do |address| %>
      <tbody>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_delivery_address_path(address.id), class:"btn btn-success" %>
              <%= link_to "削除する", delivery_address_path(address.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class:"btn btn-danger" %></td>
        </tr>
      </tbody>
        <% end %>
    </table>
    </div>
  </div>
</div>