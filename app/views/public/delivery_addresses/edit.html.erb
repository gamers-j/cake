<h4>配送先編集</h4>
<%= form_with model: @address, url: delivery_address_path(@address.id), method: :patch do |f| %>

<table class="table">
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
  </tr>
<% end %>
</table>

