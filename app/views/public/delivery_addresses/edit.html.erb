<div class="container py-5">
 <h4>
   <span class="bg-dark text-light px-3">配送先編集</span>
 </h4>
 <div class="row pt-3">
  <%= form_with model: @address, url: delivery_address_path(@address.id), method: :patch do |f| %>
  <table class="table">
   <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postal_code %></td>
   </tr>
   <tr>
    <td>住所</td>
    <td><%= f.text_field :address, :size=>"60" %></td>
   </tr>
   <tr>
    <td>宛名</td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
   </tr>
  <% end %>
  </table>
 </div>
</div>







